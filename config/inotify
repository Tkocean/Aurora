#!/system/bin/sh
export PATH="$(magisk --path)/.magisk/busybox:/data/adb/ksu/bin:$PATH:/data/data/com.termux/files/usr/bin"
source /data/adb/modules/Aurora/config/Aurora.ini

events=$1
monitor_dir=$2
monitor_file=$3
signal_file=${DATADIR}/cmdRunning

if [ "${monitor_file}" = "disable" ] ; then
  touch ${signal_file}
  if [ "${events}" = "d" ] ; then
    ${SYSTEM}/Aurora -s
  elif [ "${events}" = "n" ] ; then
    ${SYSTEM}/Aurora -k
  fi
  rm ${signal_file}
fi

if [ "${monitor_file}" = "updata" ] ; then
  touch ${signal_file}
  if [ "${events}" = "d" ] ; then
    ${SYSTEM}/Aurora -r ${updata_path}
  elif [ "${events}" = "n" ] ; then
    ${SYSTEM}/Aurora -p
  fi
  rm ${signal_file}
fi

if [ "${monitor_file}" = "remove" ] ; then
  touch ${signal_file}
  if [ "${events}" = "d" ] ; then
    ${SYSTEM}/Aurora -a
  elif [ "${events}" = "n" ] ; then
    ${SYSTEM}/Aurora -e
  fi
  rm ${signal_file}
fi

if [ "${monitor_file}" = "upkernel" ] ; then
  touch ${signal_file}
  if [ "${events}" = "d" ] ; then
    ${SYSTEM}/Aurora -r bin
  elif [ "${events}" = "n" ] ; then
    ${SYSTEM}/Aurora -u
  fi
  rm ${signal_file}
fi